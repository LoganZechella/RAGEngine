# =============================================================================
# RAGEngine Distribution Environment Variables
# Copy this file to .env and fill in your API keys before running
# =============================================================================

# REQUIRED: OpenAI API Key for embeddings and LLM
OPENAI_API_KEY=your-openai-api-key-here

# OPTIONAL: Google API Key for additional LLM support
GOOGLE_API_KEY=your-google-api-key-here

# =============================================================================
# These variables are already configured in docker-compose.distribution.yml
# You typically don't need to change these unless you have specific requirements
# =============================================================================

# Collection Configuration
DEFAULT_COLLECTION=current_documents
AVAILABLE_COLLECTIONS=current_documents,legacy_documents,sop_policy,research_data,clinical_studies
AUTO_COLLECTION_ASSIGNMENT=true

# Document Processing
CHUNKING_STRATEGY=hybrid_hierarchical_semantic
CHUNK_SIZE_TOKENS=512
CHUNK_OVERLAP_TOKENS=100
VECTOR_DIMENSIONS=1536

# Search Configuration
TOP_K_DENSE=10
TOP_K_SPARSE=10
TOP_K_RERANK=5

# System Configuration
ENABLE_DOCUMENT_TYPE_DETECTION=true
LOG_LEVEL=INFO
TZ=UTC 