# =============================================================================
# RAGEngine Distribution Environment Variables
# Copy this file to .env and fill in your API keys before running
# =============================================================================

# REQUIRED: OpenAI API Key for embeddings and LLM
OPENAI_API_KEY=your-openai-api-key-here

# OPTIONAL: Google API Key for additional LLM support
GOOGLE_API_KEY=your-google-api-key-here

# =============================================================================
# Collection Configuration - Controls document organization
# =============================================================================

# Default collection for new documents
DEFAULT_COLLECTION=current_documents

# Available collections (comma-separated)
AVAILABLE_COLLECTIONS=current_documents,legacy_documents,sop_policy,research_data,clinical_studies

# Enable automatic document classification
AUTO_COLLECTION_ASSIGNMENT=true

# =============================================================================
# Document Processing Configuration
# =============================================================================

# Document source directory (mounted in Docker)
SOURCE_DOCUMENTS_DIR=/app/documents

# Upload processing settings
CHUNKING_STRATEGY=hybrid_hierarchical_semantic
CHUNK_SIZE_TOKENS=512
CHUNK_OVERLAP_TOKENS=100
VECTOR_DIMENSIONS=1536

# Content processing features
ENABLE_CONTENT_FILTERING=true
ENABLE_DEDUPLICATION=true
ENABLE_DOCUMENT_TYPE_DETECTION=true

# =============================================================================
# Search Configuration
# =============================================================================

# Search result limits
TOP_K_DENSE=10
TOP_K_SPARSE=10
TOP_K_RERANK=5

# =============================================================================
# System Configuration
# =============================================================================

# Vector database connection
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=

# Application settings
DOCKER_ENV=true
LOG_LEVEL=INFO
TZ=UTC

# =============================================================================
# Upload Settings (Docker-specific)
# =============================================================================

# Upload directory within documents volume
UPLOAD_DIR=/app/documents/uploads

# File upload limits
MAX_UPLOAD_SIZE_MB=100
ALLOWED_FILE_TYPES=.pdf,.txt,.html,.htm,.md

# Upload cleanup settings
CLEANUP_TEMP_FILES=true
UPLOAD_TIMEOUT_SECONDS=300 